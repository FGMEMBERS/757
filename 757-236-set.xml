			</key>
			<key>
				<name>Del</name>
				<desc>Toggle Reversers</desc>
			</key>
			<key>
				<name>Ctrl+B</name>
				<desc>Toggle SpeedBrake</desc>
			</key>
			<key>
				<name>b </name>
				<desc>Brakes</desc>
			</key>
			<key>
				<name>Shift+b </name>
				<desc>Parking brakes</desc>
			</key>
			<key>
				<name>w</name>
				<desc>Engage nose wheel steering</desc>
			</key>
		</help>
		
  <yoke-visible type="bool">1</yoke-visible>

